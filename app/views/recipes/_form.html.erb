<div class="row">
  <div class="col-md-12">
    <%= simple_form_for @recipe, :html => { :multipart => true } do |f| %>
      <div class="form-group">
        <%= f.input :name, label: 'Nome' %>
        <%= f.input :cuisine, label: 'Cozinha' %>
        <%= f.input :type_of_food, label: 'Tipo de comida' %>
        <%= f.input :food_preferences, label: 'Preferências de comida' %>
        <%= f.input :servings, label: 'Quantas pessoas serve' %>
        <%= f.input :prepare_time, label: 'Tempo de preparo' %>
        <%= f.input :difficulty, label: 'Nível de dificuldade' %>
        <%= f.input :ingredients, as: :text, label: 'Ingredientes' %>
        <%= f.input :directions, as: :text, label: 'Passo a passo' %>
        <%= f.input :image, as: :file, label: 'Imagem' %>
        <%= f.button :submit, 'Salvar receita', class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
