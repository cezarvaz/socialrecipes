<div class="row">
  <div class="col-md-3">
    <aside>
      <h3>Preferência</h3>
      <dl>
        <% @preferences.each do |preference| %>
          <dt class="text-left"> <%= preference.name %> </dt>
        <% end  %>
      </dl>
    </aside>
    <br>
    <aside>
      <h3>Tipo</h3>
      <dl>
        <% @types.each do |type| %>
          <dt class="text-left"> <%= type.name %> </dt>
        <% end  %>
      </dl>
    </aside>
    <br>
    <aside>
      <h3>Cozinha</h3>
      <dl>
        <% @cuisines.each do |cuisine| %>
          <dt class="text-left"> <%= cuisine.name %> </dt>
        <% end  %>
      </dl>
    </aside>
  </div>

  <div class="col-md-9">
    <div class="row">
        <div class="col-md-5">
          <h3><%= @recipe.name %></h3>
          <p>Enviado por: Cezar Vaz</p>
          <p>Preferência: <%= @recipe.preference.name %></p>
          <p>Tipo: <%= @recipe.type.name %></p>
          <p>Cozinha: <%= @recipe.cuisine.name %></p>
          <p>Serve: <%= @recipe.servings %> pessoas</p>
          <p>Tempo de preparo: <%= @recipe.prepare_time %> minutos</p>
          <p>Dificuldade: <%= @recipe.difficulty %></p>
          <h4>Ingredientes:</h4>
          <p class="text-justify"><%= @recipe.ingredients %></p>
        </div>
        <div class="col-md-7">
          <h3></h3>
          <%= image_tag @recipe.image.url(:medium) %>
          <h4>Preparo:</h4>
          <p class="text-justify"><%= @recipe.directions %></p>
        </div>
        <button type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Salvar como favorita
        </button>
        <button type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Enviar por e-mail
        </button>
    </div>
  </div>
</div>
