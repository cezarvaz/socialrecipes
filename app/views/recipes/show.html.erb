<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3">
        <aside>
          <h3>Preferência</h3>
          <dl>
            <dt class="text-left"> Vegetariana </dt>
            <dt class="text-left"> Carnes </dt>
            <dt class="text-left"> Diet </dt>
          </dl>
        </aside>
        <br>
        <aside>
          <h3>Tipo</h3>
          <dl>
            <dt class="text-left"> Entrada </dt>
            <dt class="text-left"> Principal </dt>
            <dt class="text-left"> Sobremesa </dt>
          </dl>
        </aside>
        <br>
        <aside>
          <h3>Cozinha</h3>
          <dl>
            <dt class="text-left"> Mineira </dt>
            <dt class="text-left"> Italiana </dt>
            <dt class="text-left"> Mexicana </dt>
          </dl>
        </aside>
      </div>

      <div class="col-md-9">
        <div class="row">
            <div class="col-md-5">
              <h3><%= @recipe.name %></h3>
              <p>Enviado por: Cezar Vaz</p>
              <p>Preferência: <%= @recipe.food_preferences %></p>
              <p>Tipo: <%= @recipe.type_of_food %></p>
              <p>Cozinha: <%= @recipe.cuisine %></p>
              <p>Serve: <%= @recipe.servings %> pessoas</p>
              <p>Tempo de preparo: <%= @recipe.servings %> minutos</p>
              <p>Dificuldade: <%= @recipe.difficulty %></p>
              <h4>Ingredientes:</h4>
              <p class="text-justify"><%= @recipe.ingredients %></p>
            </div>
            <div class="col-md-7">
              <h3></h3>
              <%= image_tag @recipe.image.url(:medium) %>
              <h4>Preparo:</h4>
              <p class="text-justify"><%= @recipe.directions %></p>
            </div>
            <button type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Salvar como favorita
            </button>
            <button type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Enviar por e-mail
            </button>
        </div>
      </div>
    </div>
  </div>
</div>
